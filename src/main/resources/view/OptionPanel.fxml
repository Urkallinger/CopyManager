<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.urkallinger.copymanager.view.OptionPanelController">
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<children>
		<HBox prefHeight="40.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Label prefHeight="40.0" text="file extensions">
					<font>
						<Font size="15.0" />
					</font>
				</Label>
				<HBox HBox.hgrow="ALWAYS" />
				<Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAdd"
					prefHeight="36.0" prefWidth="36.0">
					<tooltip>
						<Tooltip text="add new file extension">
							<font>
								<Font size="15.0" />
							</font>
						</Tooltip>
					</tooltip>
				</Button>
			</children>
		</HBox>
		<ListView fx:id="fileExtensionList" layoutX="20.0"
			AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0" />
		<Label layoutX="10.0" layoutY="10.0" prefHeight="30.0" text="pattern"
			AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<font>
				<Font size="15.0" />
			</font>
		</Label>
		<TextField fx:id="txtPattern" layoutX="10.0" layoutY="10.0"
			text=".*(S\d+E\d+).*" AnchorPane.bottomAnchor="120.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
			<font>
				<Font name="Consolas" size="15.0" />
			</font>
		</TextField>
		<Label layoutX="10.0" layoutY="10.0" prefHeight="30.0" text="template"
			AnchorPane.bottomAnchor="80.0">
			<font>
				<Font size="15.0" />
			</font>
		</Label>
		<TextField fx:id="txtTemplate" layoutX="10.0" layoutY="10.0"
			AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<font>
				<Font name="Consolas" size="15.0" />
			</font>
		</TextField>
		<Button fx:id="btnUseTemplate" onAction="#handleUseTemplate"
			layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<tooltip>
				<Tooltip text="use pattern and template to generate new filename">
					<font>
						<Font size="15.0" />
					</font>
				</Tooltip>
			</tooltip>
		</Button>
	</children>
</AnchorPane>
