<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.urkallinger.copymanager.controller.OptionPanelController">
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<children>
		<HBox prefHeight="40.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<Label prefHeight="40.0" text="%keywords.extensions">
					<font>
						<Font size="15.0" />
					</font>
				</Label>
				<HBox HBox.hgrow="ALWAYS" />
				<Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAdd"
					prefHeight="36.0" prefWidth="36.0">
					<tooltip>
						<Tooltip text="%view.OptionPanel.add_new_file_ex">
							<font>
								<Font size="15.0" />
							</font>
						</Tooltip>
					</tooltip>
				</Button>
			</children>
		</HBox>
		<ListView fx:id="fileExtensionList" AnchorPane.bottomAnchor="200.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="50.0" />
		<HBox AnchorPane.bottomAnchor="155.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<children>
				<Label prefHeight="36.0" text="%keywords.pattern">
					<font>
						<Font size="15.0" />
					</font>
				</Label>
				<HBox HBox.hgrow="ALWAYS" />
				<Button fx:id="btnLoad" onAction="#handleLoadPattern"
					prefHeight="36.0" prefWidth="36.0">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="btnSave" onAction="#handleSavePattern"
					prefHeight="36.0" prefWidth="36.0" />
			</children>
		</HBox>
		<TextField fx:id="txtPattern" text="(.*)"
			AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<font>
				<Font name="Consolas" size="15.0" />
			</font>
		</TextField>
		<Label prefHeight="30.0" text="%keywords.template"
			AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<font>
				<Font size="15.0" />
			</font>
		</Label>
		<TextField fx:id="txtTemplate" text="#1"
			AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0">
			<font>
				<Font name="Consolas" size="15.0" />
			</font>
		</TextField>
		<Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClear"
			prefWidth="70.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
			<tooltip>
				<Tooltip text="%view.OptionPanel.clear_new_filename">
					<font>
						<Font size="15.0" />
					</font>
				</Tooltip>
			</tooltip>
		</Button>
		<Button fx:id="btnUseTemplate" mnemonicParsing="false"
			onAction="#handleUseTemplate" prefWidth="70.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="80.0">
			<tooltip>
				<Tooltip text="%view.OptionPanel.use_pattern_and_template">
					<font>
						<Font size="15.0" />
					</font>
				</Tooltip>
			</tooltip>
		</Button>
	</children>
</AnchorPane>
